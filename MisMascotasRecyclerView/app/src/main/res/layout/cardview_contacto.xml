<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res/android"
    card_view:layout_height="wrap_content"
    card_view:layout_width="match_parent"
    tools:ignore="NamespaceTypo"
    card_view:layout_marginBottom="@dimen/fab_margin">

    <LinearLayout
        card_view:layout_width="match_parent"
        card_view:layout_height="match_parent"
        card_view:orientation="vertical"
        card_view:padding="7dp">

        <ImageView
            card_view:id="@+id/imgFoto"
            card_view:layout_width="245dp"
            card_view:layout_height="262dp"
            card_view:layout_gravity="center_horizontal"
            card_view:contentDescription="TODO"
            card_view:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView

            card_view:id="@+id/tvNombre"
            card_view:layout_width="111dp"
            card_view:layout_height="35dp"
            card_view:text="@string/pnombre"
            card_view:textSize="20sp"
            card_view:textStyle="bold">

        </TextView>

        <TextView
            card_view:id="@+id/tvEmail"
            card_view:layout_width="111dp"
            card_view:layout_height="35dp"
            card_view:text="@string/ptelefono"
            card_view:textSize="20sp"
            card_view:textStyle="bold">

        </TextView>

    </LinearLayout>

</androidx.cardview.widget.CardView>